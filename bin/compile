#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

indent() {
  sed -u 's/^/       /'
}

echo "-----> Installing Crystal 0.7.4"

# change to the the BUILD_DIR ($1)
cd $1

# download the mruby binary (-O) silently (-s)
curl https://github.com/manastech/crystal/releases/download/0.7.4/crystal-0.7.4-1-linux-x86_64.tar.gz -s -O -L

# make a directory to untar (like unzip) the binary
mkdir -p vendor/crystal

# untar the binary to the directory we want
tar -C vendor/crystal -xvf crystal-0.7.4-1-linux-x86_64.tar.gz | indent

echo "exporting PATH" | indent
PROFILE_PATH="$BUILD_DIR/.profile.d/crystal.sh"
mkdir -p $(dirname $PROFILE_PATH)
echo 'export PATH="$PATH:$HOME/vendor/crystal/crystal-0.7.4-1/bin"' >> $PROFILE_PATH
